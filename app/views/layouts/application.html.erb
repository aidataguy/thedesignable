<!DOCTYPE html>
<html>
<head>
  <%= favicon_link_tag 'favicon.ico'%>
  <title> <%= yield :title %> - Thedesignable </title>
  <%= stylesheet_link_tag    'https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css' %>
  <%= stylesheet_link_tag    'http://fonts.googleapis.com/css?family=Raleway:400,500,700' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js' %>
  
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

<% if notice %>
<div id="notice_wrap">
  <p class="notice"><%= notice %></p>
</div>
<% elsif alert %>
<div id="notice_wrap">
  <p class="alert"><%= alert %></p>
</div>
<% end %>

<%= render 'partials/navbar' %>
<%# side button for login and log out %> 
   
       <% if user_signed_in? %>  
       <%= link_to "Sign Out",destroy_user_session_path, method: :delete, class: "btn navbar-btn btn-large btn-danger sideout" %>
       <% elsif%>       	
       <%= link_to "Log In", new_user_session_path, class: "btn btn-success btn-large navbar-btn sidein" %>
       <% end %>
<div id="content">
<%= yield %>
</div>

<%= render 'partials/footer' %>

</body>

</html>
