<%= form_for @post do |f| %>
	<p><%= f.text_field :title %></p>
	<p><%= f.text_area :description %></p>
	<p><%= f.label :tag_list, "Tags (separated by commas)" %></p>
	<p> <%= f.text_field :tag_list %></p>
	<p><%= f.text_area :body, class: "ckeditor" %></p>
	
	<p><%= f.button :submit %></p>
<% end %>
