<%= title "Articles" %>
<div id="articles">
<div class="container">	
	<div class="row">
			<div class="col-md-6">
				<h1><%= @post.title %></h1>
				<p>Author: <%= @post.user.name %>
				<p><%= image_tag (@post.user.avatar.url(:thumb)), class: "round" %></p>
				<p> Created at <%= time_ago_in_words(@post.created_at) %></p>
				<p><%= @post.description %></p>
				<p><%= @post.body.to_s.html_safe %></p>
		</div>
		<div class="col-md-6">	
				<h3>Comments</h3>
				<%= pluralize(@post.comments.count, "Comment") %>
				<p><% @comments.each do |comment|%></p>
				<p>by <%= comment.user.name %>, about <%= time_ago_in_words(comment.created_at)%> ago</p>
				<p><%= comment.content %></p>
				<% end %>
				<%= link_to like_post_path(@post), method: :get do %>
				<%= pluralize(@post.get_upvotes.size, "Like") %>
				<% end %>
				<%= link_to dislike_post_path(@post), method: :get do %>
				<%= pluralize(@post.get_downvotes.size, "Dislike") %>
				<% end %>
				<% if @post.user == current_user %>
					<p> <%= link_to "Edit", edit_post_path(@post), class: "btn btn-warning" %> 
					 <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger"%> </p>
				<%end%>
				<p><%= render 'partials/commentform' %></p>
		</div>	
	</div>
</div>
</div>


