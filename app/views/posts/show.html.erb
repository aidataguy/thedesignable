<h1><%= @post.title %></h1>
<p>Author: <%= @post.user.name %>, Created at <%= time_ago_in_words(@post.created_at) %></p>
<p><%= @post.description %></p>
<p><%= @post.body.to_s.html_safe %></p>
<div>
<h3>Comments</h3>
<%= pluralize(@post.comments.count, "Comment") %>
	<p><% @comments.each do |comment|%></p>
		<p>by <%= comment.user.name %>, about <%= time_ago_in_words(comment.created_at)%> ago</p>
		<p><%= comment.content %></p>
	<% end %>
</div>	

<%= link_to like_post_path(@post), method: :get do %>
<%= pluralize(@post.get_upvotes.size, "Like") %>
<% end %>
	<%= link_to dislike_post_path(@post), method: :get do %>
	<%= pluralize(@post.get_downvotes.size, "Dislike") %>
	<% end %>
	<% if @post.user == current_user %>
<p> <%= link_to "Edit", edit_post_path(@post) %> 
 <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }%> </p>

<%end%>
<p><%= render 'partials/commentform' %></p>